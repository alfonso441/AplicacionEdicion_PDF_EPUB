<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_indicaciones_herramienta_PDF_EPUB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Seleccione la herramienta a utilizar"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
    android:id="@+id/bt_herramienta_PDF"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/design_default_color_primary"
    android:minWidth="160dp"
    android:text="Herramientas PDF"
    android:textColor="#ffffff"
    android:layout_below="@+id/txt_indicaciones_herramienta_PDF_EPUB"/>

    <Button
        android:id="@+id/bt_herramienta_EPUB"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_herramienta_PDF"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#3aa8c1"
        android:minWidth="160dp"
        android:text="Herramientas EPUB"
        android:textColor="#ffffff" />

</LinearLayout>